    <div id="myModal" class="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <span class="arrow arrow-left" onclick="moveSlide(-1)">&#10094;</span>
        <img class="modal-content" id="img01">
        <span class="arrow arrow-right" onclick="moveSlide(1)">&#10095;</span>
    </div>

    <script>
        // Funkcionalnost za slideshow
        let slideIndex = 0;
        const slides = document.querySelectorAll('.slides');
        function showSlides() {
            slides.forEach(slide => slide.classList.remove('active'));
            slideIndex++;
            if (slideIndex > slides.length) slideIndex = 1;
            slides[slideIndex - 1].classList.add('active');
            setTimeout(showSlides, 5000);
        }
        showSlides();

        // Funkcionalnost modala za slike
        let currentSlide = 0;
        const images = ['slika1.jpg', 'slika2.jpg', 'slika3.jpg', 'slika4.jpg', 'slika5.jpg'];

        // Otvori modal s slikom
        function openModal(imgSrc) {
            const modal = document.getElementById("myModal");
            const modalImg = document.getElementById("img01");
            modal.style.display = "block";
            modalImg.src = imgSrc;
            currentSlide = images.indexOf(imgSrc);
        }

        // Zatvori modal
        function closeModal() {
            const modal = document.getElementById("myModal");
            modal.style.display = "none";
        }

        // Pomakni slike u modalu lijevo i desno
        function moveSlide(direction) {
            currentSlide += direction;
            if (currentSlide < 0) {
                currentSlide = images.length - 1;
            } else if (currentSlide >= images.length) {
                currentSlide = 0;
            }
            const modalImg = document.getElementById("img01");
            modalImg.src = images[currentSlide];
        }
    </script>
